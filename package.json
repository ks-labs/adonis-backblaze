{
  "name": "@ks-labs/adonis-backblaze",
  "version": "2.3.14",
  "description": "Adonis Provider for BackBlaze Cloud Storage",
  "main": "instructions.js",
  "author": "@ks-labs",
  "license": "MIT",
  "directories": {
    "example": "example"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "ðŸ”– chore(release): ${version}",
      "pushArgs": [
        "--follow-tags",
        "--force"
      ]
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "increment": "conventional:@favoloso/emoji",
    "scripts": {
      "changelog": "./node_modules/.bin/conventional-changelog -p @favoloso/emoji | tail -n +3",
      "beforeStage": "./node_modules/.bin/conventional-changelog -p @favoloso/emoji -i CHANGELOG.md -s"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "@favoloso/emoji",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "favolosoEmoji": {
    "showEmojiPerCommit": true
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "standard",
    "test:local": "node bin/japaFile.js",
    "test:watch": "nodemon bin/japaFile.js",
    "test": "npm run test:local",
    "coverage": "nyc npm run test:local",
    "posttest": "echo posttest",
    "cm": "cz",
    "changemoji": "npx gitmoji-changelog",
    "rit": "release-it",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "@adonisjs/sink": "^1.1.0",
    "@commitlint/cli": "^16.1.0",
    "@favoloso/conventional-changelog-emoji": "^0.10.0",
    "@release-it/conventional-changelog": "^4.1.0",
    "commitizen": "^4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-customizable": "^6.3.0",
    "dotenv": "^14.2.0",
    "eslint": "^8.4.1",
    "gitmoji-changelog": "^2.3.0",
    "husky": "^7.0.0",
    "install": "^0.13.0",
    "japa": "^4.0.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier-eslint": "^13.0.0",
    "release-it": "^14.12.4",
    "should": "^13.2.3",
    "standard": "^16.0.4",
    "standard-version": "^9.3.1"
  },
  "dependencies": {
    "@adonisjs/fold": "^4.1.0",
    "backblaze-b2": "^1.7.0",
    "hasha": "^5.2.2",
    "macroable": "^4.0.2",
    "md5": "^2.3.0",
    "node-exceptions": "^4.0.1"
  }
}